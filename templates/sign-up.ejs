<%- include('components/head') %>
  <div id="bg-linear-gradient"></div>
  <div id="root-sign">
    <div class="root">
      <h1 data-string="welcome"></h1>
      <h2 data-string="createAccount"></h2>
      <div class="sign-up-container">
        <a href="/" data-string="enter"></a>
      </div>
      <form id="sign-up-form">
        <div class="form-element">
          <input data-for="show-profile" type="file" accept="image/*" id="input-file">
          <img id="show-profile" src="/images/profile-placeholder.png" width="100" height="100" alt="">
        </div>
        <div class="form-element">
          <label for="input-name" data-string="name"></label>
          <input type="text" id="input-name">
          <small data-string="nameSmall" data-for="input-name"></small>
        </div>
        <div class="form-element">
          <label for="input-email" data-string="email"></label>
          <input type="email" id="input-email">
          <small data-string="emailSmall" data-for="input-email"></small>
        </div>
        <div class="form-element">
          <label for="input-password" data-string="password"></label>
          <input type="password" id="input-password">
          <small data-string="passwordSmall" data-for="input-password"></small>
        </div>
        <div class="form-element">
          <div style="display: flex; align-items: center;">
            <p data-string="cookiesWarning"></p>
            <a style="text-decoration: underline;" href="/cookies" data-string="learnMore"></a>
          </div>
          <div style="display: flex; align-items: center;">
            <p data-string="signUpWarning"></p>
            <a style="text-decoration: underline;" href="/cookies" data-string="terms"></a>
          </div>
        </div>
        <button class="btn" data-string="signUp"></button>
      </form>
    </div>
  </div>
<%- include('components/footer') %>
